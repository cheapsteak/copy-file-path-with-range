{
  "name": "copy-file-path-with-range",
  "displayName": "copy-file-path-with-range",
  "description": "Copy file path with range to provide as context to coding assistants",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copy-file-path-with-range.copyRelativePath",
        "title": "Copy Relative Path with Range"
      },
      {
        "command": "copy-file-path-with-range.copyAbsolutePath",
        "title": "Copy Absolute Path with Range"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "copy-file-path-with-range.copyRelativePath",
          "group": "9_cutcopypaste",
          "when": "editorTextFocus"
        },
        {
          "command": "copy-file-path-with-range.copyAbsolutePath",
          "group": "9_cutcopypaste",
          "when": "editorTextFocus"
        }
      ]
    },
    "keybindings": [
      {
        "command": "copy-file-path-with-range.copyRelativePath",
        "key": "alt+l",
        "mac": "alt+l",
        "when": "editorTextFocus"
      },
      {
        "command": "copy-file-path-with-range.copyAbsolutePath",
        "key": "alt+shift+l",
        "mac": "alt+shift+l",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
